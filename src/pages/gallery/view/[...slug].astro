---
import { type CollectionEntry, getCollection } from 'astro:content';
import GalleryFocus from "../../../layouts/gallery-focus.astro"; 

export async function getStaticPaths() {
	const entries = await getCollection('gallery');
    return entries.map((entry) => ({
		params: { slug: entry.id },
		props: { entry },
	}));
}

type Props = { entry: CollectionEntry<'gallery'>; }
const { entry } = Astro.props;
---

<GalleryFocus title={entry.data.title} description={entry.data.description} image={entry.data.imagePath} alt={entry.data.altText} width={entry.data.imageWidth} height={entry.data.imageHeight}/>